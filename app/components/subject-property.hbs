<AuAlert @skin={{this.skin}}>
  <CustomAccordion @defaultOpen="true">
    <:toolbar>
      <p class="au-u-h4">{{@property.name}}</p>
      <span class="au-u-para-tiny au-u-flex au-u-margin-top-tiny">
        <p class="au-u-margin-right-tiny au-u-word-nowrap">
          Gevonden path:
        </p>
        <AuLinkExternal
          @skin="primary"
          href={{@property.path}}
          class="truncate-url"
          title={{@property.path}}
        >
          {{@property.path}}
        </AuLinkExternal>
      </span>
      <p class="au-u-para">{{@property.description}}</p>
    </:toolbar>
    <:counts>{{this.countText}}</:counts>
    <:content>
      {{#if this.hasNoValues}}
        <p>Geen waarde gevonden</p>
      {{else}}
        {{#each @property.value as |value index|}}
          {{#if value.uri}}
            <RecursiveEntry @subject={{value}} @index={{index}} />
          {{else}}
            <p>{{value}}</p>
          {{/if}}
        {{/each}}
      {{/if}}
    </:content>
  </CustomAccordion>
</AuAlert>