<AuAlert @skin={{this.skin}} class={{this.displayClass}}>
  <CustomAccordion>
    <:toolbar>
      <p class="truncate-url au-u-h4">
        {{@subject.className}}
        {{this.displayIndex}}
      </p>
      <span class="au-u-para-tiny au-u-flex au-u-margin-top-tiny">
        <p class="au-u-margin-right-tiny au-u-word-nowrap">
          Gevonden URI:
        </p>
        <AuLinkExternal @skin="primary" class="truncate-url">
          {{@subject.uri}}
        </AuLinkExternal>
      </span>
      <p class="au-u-para">{{this.description}}</p>
    </:toolbar>
    <:counts>{{this.countText}}</:counts>
    <:content>

    </:content>
  </CustomAccordion>
</AuAlert>