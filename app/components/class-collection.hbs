<CustomAccordion @defaultOpen="true">
  <:toolbar>
    {{@collection.className}}
    <span class="au-u-para-tiny au-u-flex au-u-margin-top-tiny">
      <p class="au-u-margin-tiny au-u-margin-left-none au-u-word-nowrap">
        Gevonden URI:
      </p>
      <CopyToClipboard @value={{@collection.classURI}} />
    </span>
  </:toolbar>
  <:counts>{{@collection.count}}</:counts>
  <:content>
    {{#if this.tooManyDocuments}}
      <AuAlert @skin="warning">
        <section class="au-u-1-1 accordion-title au-u-flex au-u-flex--between">
          <p class="au-u-para">
            Deze publicatie bevat te veel documenten!
          </p>
        </section>
      </AuAlert>
    {{/if}}
    {{#each @collection.objects as |object index|}}
      <RecursiveEntry @subject={{object}} @index={{index}} />
    {{/each}}
  </:content>
</CustomAccordion>